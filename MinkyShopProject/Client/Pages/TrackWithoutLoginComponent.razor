@inject NavigationManager NavigationManager
@page "/track"

<main class="bg_gray" style="margin-bottom: 25px">
	<div id="track_order">
		<div class="container">
			<div class="row justify-content-center text-center">
				<div class="col-xl-7 col-lg-9">
					<img src="img/track_order.svg" alt="" class="img-fluid add_bottom_15" width="200" height="177">
					<p>Quick Tracking Order</p>
					<form>
						<div class="search_bar">
							<input type="text" class="form-control" placeholder="Invoice ID"  @onchange='e => Ma = e.Value?.ToString() ?? ""' @onkeypress='e => { if(e.Code == "Enter") { NavigationManager.NavigateTo("/printma/" + e); } }'>
							<input type="submit" value="Search" @onclick='() => NavigationManager.NavigateTo("/printma/" + Ma)'>
						</div>
					</form>
				</div>
			</div>
			<!-- /row -->
		</div>
		<!-- /container -->
	</div>
	<!-- /track_order -->
</main>

@code{
	string Ma = "";
}
